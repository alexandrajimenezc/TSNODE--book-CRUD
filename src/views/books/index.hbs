{{#each books}}
<div class="col-md-4">
  <div class="card card-body">

    <h3>{{this.title}}</h3>
    <p>Author: {{this.author}}</p>
    <p>ISBN: {{this.isbn}}</p>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <a href="/books/delete/{{_id}}" class="btn btn-danger">
        Delete
      </a>
       <a href="/books/edit/{{_id}}" class="btn btn-secondary">
        Edit
      </a> 
    </div>
  </div>
</div>
{{/each}}


