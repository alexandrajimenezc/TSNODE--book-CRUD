<div class="col-md-5 mx-auto">
    <div class="card-body">
    <form action="/books/add" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Book title" autofocus>
        </div>
        <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Author Book" autofocus>
        </div>
        <div class="form-group">
            <input type="text" name="isbn" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" class="form-control" placeholder="ISBN" autofocus>
        </div>
        <button class="btn btn-primary btn-block">save</button>
    </form>
</div>
</div>